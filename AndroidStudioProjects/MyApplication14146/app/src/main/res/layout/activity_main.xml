<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TextView en haut -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:background="#8A2BE2"
        android:gravity="center"
        android:text="Exercice1"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FrameLayout centré horizontalement, avec un espace en haut -->
    <FrameLayout
        android:id="@+id/FrameLayout"
        android:layout_width="464dp"
        android:layout_height="517dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" /> <!-- Centré horizontalement -->

    <!-- ImageButton placé sous le FrameLayout avec un espace de 16dp en dessous -->
    <ImageButton
        android:id="@+id/ledButton"
        android:layout_width="230dp"
        android:layout_height="47dp"
        android:layout_marginHorizontal="16dp"
        android:src="@drawable/toggle_off"
        app:layout_constraintTop_toBottomOf="@id/FrameLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0" /> <!-- Légèrement espacé du FrameLayout -->

</androidx.constraintlayout.widget.ConstraintLayout>
